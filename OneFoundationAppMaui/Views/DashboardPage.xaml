<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneFoundationAppMaui.Views.DashboardPage"
             Shell.NavBarIsVisible ="False">
    <VerticalStackLayout VerticalOptions="Center" Spacing="20" Margin="20">
        <Label Text="Welcome to .NET MAUI Dashboard Page!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="Subtitle"/>
        <Button Margin="0,30,0,0" Text="Login" CornerRadius="20" Command="{Binding LogoutCommand}" BackgroundColor="{x:StaticResource Primary}" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
