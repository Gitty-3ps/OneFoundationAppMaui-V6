<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneFoundationAppMaui.Views.SongDetailsPage"
             xmlns:vm="clr-namespace:OneFoundationAppMaui.ViewModels"
             Title="{Binding Song.Title}"
             x:DataType ="vm:SongDetailsViewModel">

        <VerticalStackLayout>
        <Label Text="{Binding Song.Title}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold"/>
        <Label Text="{Binding Song.Authors}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold"/>
        <Label Text="{Binding Song.Lyrics}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="Medium"/>
    </VerticalStackLayout>
</ContentPage>