<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OneFoundationAppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OneFoundationAppMaui"
    xmlns:mylogin="clr-namespace:OneFoundationAppMaui.Views"
    Shell.FlyoutBehavior="Flyout" 
    x:Name="MyAppShell">

    <FlyoutItem Route="Login" x:Name="MyLoginPage">
        <ShellContent ContentTemplate="{DataTemplate mylogin:LoginPage}"/>
    </FlyoutItem>

    <ShellContent x:Name="MyDashboardPage"
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="Dashboard" />
 

</Shell>
