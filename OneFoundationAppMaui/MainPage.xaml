<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneFoundationAppMaui.MainPage"
             xmlns:model="clr-namespace:OneFoundationAppMaui.Models"
             xmlns:viewmodel="clr-namespace:OneFoundationAppMaui.ViewModels"
             x:DataType ="viewmodel:SongListViewModel"
             Title="{Binding Title}">
    <Grid ColumnDefinitions="*,*" ColumnSpacing="5" RowDefinitions="*, Auto">
        <CollectionView Grid.ColumnSpan="2" ItemsSource="{Binding Songs}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Song">
                    <Frame HeightRequest="90">
                        <HorizontalStackLayout Padding="10" Spacing="5">
                                <Label Text="{Binding Title }"></Label>
                                <Label Text="{Binding Authors}"></Label>
                                <Label Text="{Binding Lyrics}"></Label>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        <Button Text="Fetch Songs" Command="{Binding GetSongListCommand}" IsEnabled="{Binding IsNotLoading}" 
                Grid.Row="1" Grid.Column="0" Margin="9"/>
    </Grid>
</ContentPage>
